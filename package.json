{
  "name": "timestamped-token-reward-system",
  "version": "1.0.0",
  "description": "A tutorial Solana application demonstrating timestamped token rewards with modern React and Node.js backend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:packages": "npm run build --workspace=packages/shared",
    "build:web": "npm run build --workspace=apps/web",
    "build:api": "npm run build --workspace=apps/api",
    "dev": "npm run dev --workspaces",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:solana": "solana-test-validator --reset --quiet",
    "test": "npm run test --workspaces",
    "test:web": "npm run test --workspace=apps/web",
    "test:api": "npm run test --workspace=apps/api",
    "test:solana": "npm run test --workspace=apps/solana-program",
    "test:ci": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "npm run type-check --workspaces",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "db:setup": "cd apps/api && npm run db:setup",
    "generate:anchor-types": "cd apps/solana-program && anchor build && anchor generate ts",
    "setup": "npm install && npm run build:packages",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "railway:setup": "railway run --service api 'psql $DATABASE_URL -f scripts/railway-setup.sql'",
    "railway:deploy": "railway up",
    "railway:deploy:api": "railway up --service api",
    "railway:deploy:web": "railway up --service web",
    "railway:logs:api": "railway logs --service api",
    "railway:logs:web": "railway logs --service web",
    "start": "npm run start --workspace=apps/api"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
