{
  "name": "timestamped-token-reward-system",
  "version": "1.0.0",
  "description": "A tutorial Solana application demonstrating timestamped token rewards with modern React and Node.js backend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "build:packages": "yarn workspace @reward-system/shared build && yarn workspace @reward-system/config build",
    "build:web": "yarn workspace web build",
    "build:api": "yarn workspace @reward-system/api build",
    "dev": "concurrently \"yarn dev:api\" \"yarn dev:web\"",
    "dev:web": "yarn workspace web dev",
    "dev:api": "yarn workspace @reward-system/api dev",
    "dev:solana": "solana-test-validator --reset --quiet",
    "test": "yarn workspaces run test",
    "test:web": "yarn workspace web test",
    "test:api": "yarn workspace @reward-system/api test",
    "test:solana": "yarn workspace apps/solana-program test",
    "test:ci": "yarn workspaces run test",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "yarn workspaces run type-check",
    "typecheck": "yarn workspaces run typecheck",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "db:setup": "cd apps/api && yarn db:setup",
    "generate:anchor-types": "cd apps/solana-program && anchor build && anchor generate ts",
    "setup": "yarn install && yarn build:packages",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "railway:setup": "railway run --service api 'psql $DATABASE_URL -f scripts/railway-setup.sql'",
    "railway:deploy": "railway up",
    "railway:deploy:api": "railway up --service api",
    "railway:deploy:web": "railway up --service web",
    "railway:logs:api": "railway logs --service api",
    "railway:logs:web": "railway logs --service web",
    "start": "yarn workspace @reward-system/api start"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
