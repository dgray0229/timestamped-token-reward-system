{
  "name": "timestamped-token-reward-system",
  "version": "1.0.0",
  "description": "A tutorial Solana application demonstrating timestamped token rewards with modern React and Node.js backend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build --filter='@reward-system/shared' --filter='@reward-system/ui' --filter='@reward-system/config'",
    "build:web": "turbo build --filter=web",
    "build:api": "turbo build --filter=api",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:api": "turbo dev --filter=api",
    "dev:solana": "solana-test-validator --reset --quiet",
    "test": "turbo test",
    "test:web": "turbo test --filter=web",
    "test:api": "turbo test --filter=api",
    "test:solana": "turbo test --filter=solana-program",
    "test:ci": "turbo test --parallel",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo type-check",
    "clean": "turbo clean && rm -rf node_modules",
    "db:setup": "cd apps/api && npm run db:setup",
    "generate:anchor-types": "cd apps/solana-program && anchor build && anchor generate ts",
    "setup": "pnpm install && pnpm build:packages"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.0",
    "turbo": "^1.10.0",
    "prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.2.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}